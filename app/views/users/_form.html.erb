<h2 id="nuevo-usuario" align="center">Crear Usuario</h2>

<div class="row">
  <div class="col-md-6 col-sm-offset-1">

<%= form_for(@user, :html => {multipart: true,class: "form-horizontal", role:"form"}) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this answer from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <div class="control-label col-sm-2">
         <%= f.label :username %>
    </div>
     <div class="col-sm-8">
    <%= f.text_field :username, placeholder: "Ingresa usuario", class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="control-label col-sm-2">
        <%= f.label :email %>
    </div>
    <div class="col-sm-8">
        <%= f.email_field :email, placeholder: "Ingresa email", class: "form-control" %>
  </div>
</div>

 <div class="form-group">
    <div class="control-label col-sm-2">
        <%= f.label :password %>
    </div>
    <div class="col-sm-8">
    <%= f.password_field :password, placeholder: "Ingresa clave", class: "form-control" %>
   </div>
  </div>

 <div class="form-group">
    <div class="control-label col-sm-2">
    <%= f.label :imagen %>
    </div>
    <div class="col-sm-8">
    <%= f.file_field :avatar, placeholder: "Ingresa Imagen", class: "form-control" %>
  </div>
</div>

 <div class="form-group">
   <div class="col-sm-10 col-sm-offset-2">
     
      <%= f.submit(@user.new_record? ? "Sign up" : "Update account", class: "btn btn-primary") %>
     
   </div>
  </div>
<% end %>
  </div>
<div class="col-md-3">

  <%= image_tag("logos/Circulo2.png", :class => "img-responsive center-block", :id  =>  "logo-signup", :width => 200, :height =>500) %>
        </div>


</div>




