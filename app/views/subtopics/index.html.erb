<p id="notice"><%= notice %></p>

<h1>Listing Subtopics</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Topic</th>
      <th>Sort</th>
      <th>Is demo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @subtopics.each do |subtopic| %>
      <tr>
        <td><%= subtopic.name %></td>
        <td><%= subtopic.topic_id %></td>
        <td><%= subtopic.sort %></td>
        <td><%= subtopic.is_demo %></td>
        
        <td><%= link_to 'Show', subtopic %></td>
        <td><%= link_to 'Edit', edit_subtopic_path(subtopic) %></td>
        <td><%= link_to 'Destroy', subtopic, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

