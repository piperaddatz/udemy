<h2 id="loglog" align="center">Log In</h2>

<div class="row">
  <div class="col-md-4 col-sm-offset-1">
<%= form_for(:session, url: login_path, :html => {class: "form-horizontal", role:"form"}) do |f| %>
  

<div class="form-group">
    <div class="control-label col-sm-2">
    <%= f.label :email %>
    </div>
    <div class="col-sm-6 col-sm-offset-1"">
    <%= f.email_field :email, placeholder: "Ingresa email" %>
  </div>
</div>

 <div class="form-group">
    <div class="control-label col-sm-2">
    <%= f.label :password %>
    </div>
      <div class="col-sm-6 col-sm-offset-1">
    <%= f.password_field :password, placeholder: "Ingresa clave" %>
  </div>
</div>

   <div class="form-group">
   <div class="col-sm-6 col-sm-offset-3">
    <%= f.submit "Log In",  class: "btn btn-primary"%>
  </div>
  </div>

<% end %>

</div>

<div class="col-md-3" align="center">

  <%= image_tag("logos/Circulo2.png", :class => "img-responsive center-block", :id  =>  "logo-login", :width => 200, :height =>500) %>
        </div>

</div>







